<div class="container">
  <h1 class="heading">New Game</h1>
  <!-- display letters here -->
  <h2><%= @letters %></h2>
   <div class="form-card">
      <label>What's the longest words you can find?</label>
      <form action="/score" method="POST">
        <input type="text" name="answer">
        <input type="submit" value="I'm ready!">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :letters, @letters %>
      </form>
    </div>
</div>
